<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
    android:id="@+id/id_athlete_layout"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/id_sports_icon"/>

    <TextView
        android:id="@+id/id_athlete_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/id_sports_icon"
        android:text="12"
        />

    <TextView
        android:id="@+id/id_participating_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_athlete_name"
        android:layout_below="@id/id_athlete_name"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/id_sports_icon"
        android:textSize="14sp"
        />
    <ImageView
        android:id="@+id/btn_expand_toggle"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_weight="0"
        android:src="@drawable/circle_plus" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        />

    </RelativeLayout>