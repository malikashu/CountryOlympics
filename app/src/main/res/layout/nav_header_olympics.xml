<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:background="@color/NavigarionHeader"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/HeaderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/drawer_header"/>

    <RelativeLayout
        android:id="@+id/CountryInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/HeaderView">

    <TextView
        android:id="@+id/countryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countryTextView"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/countryImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/sym_def_app_icon"/>

        <TextView
            android:id="@+id/gold_medal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/countryImageView"
            android:background="@drawable/gold_medal_for_drawer"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/silver_medal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/gold_medal_count"
            android:background="@drawable/silver_medal_for_drawer"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/bronze_medal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/silver_medal_count"
            android:background="@drawable/bronze_medal_for_drawer"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
